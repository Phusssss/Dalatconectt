@model Web.Models.Store

@{
    ViewData["Title"] = "Add New Store";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="AddStore" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="imgUrl" class="control-label"></label>
        <input asp-for="imgUrl" class="form-control" />
        <span asp-validation-for="imgUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phuong" class="control-label"></label>
        <input asp-for="Phuong" class="form-control" />
        <span asp-validation-for="Phuong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duong" class="control-label"></label>
        <input asp-for="Duong" class="form-control" />
        <span asp-validation-for="Duong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoNha" class="control-label"></label>
        <input asp-for="SoNha" class="form-control" />
        <span asp-validation-for="SoNha" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Store</button>
</form>

<a href="@Url.Action("Index")">Back to Store List</a>
