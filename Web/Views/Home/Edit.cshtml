@model Web.Models.Product

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="imgurl" class="control-label"></label>
        <input asp-for="imgurl" class="form-control" />
        <span asp-validation-for="imgurl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TheLoaiId" class="control-label"></label>
        <input asp-for="TheLoaiId" class="form-control" />
        <span asp-validation-for="TheLoaiId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
