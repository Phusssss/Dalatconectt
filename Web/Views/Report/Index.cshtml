@model IEnumerable<Web.Models.targetcustomers>

@{
    ViewData["Title"] = "Báo Cáo Thống Kê Khách Hàng";
}

<style>
    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    .table th, .table td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
    }

    .table th {
        background-color: #f2f2f2;
        color: #333;
    }

    .table td {
        color: #555;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }
</style>

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th>Số Lượng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.Name</td>
                        <td>@customer.SoLuong</td>
                    </tr>
            }
        </tbody>
    </table>
</div>
